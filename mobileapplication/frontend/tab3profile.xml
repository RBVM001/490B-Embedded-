<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.PlaceholderFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#CCCCCC"
        android:padding="20dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-1dp"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:padding="10dp"
            android:layout_below="@id/profileText"
            android:layout_centerHorizontal="true"
            android:includeFontPadding="false"
            android:src="@drawable/profile_picture" />

        <ImageView
            android:id="@+id/rectanglebottom"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="470dp"
            android:includeFontPadding="false"
            android:src="@drawable/rectangle"/>

        <ImageView
            android:id="@+id/rectangletop"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginTop="270dp"
            android:layout_marginLeft="260dp"
            android:includeFontPadding="false"
            android:src="@drawable/rectangle"/>

        <ImageView
            android:id="@+id/rectanglemiddle"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="370dp"
            android:includeFontPadding="false"
            android:src="@drawable/rectangle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/profileText"
            android:text="Profile"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/LifetimeStats"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:text="Lifetime Stats"

            android:textSize="30dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/totaldistance"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginTop="290dp"
            android:layout_marginLeft="10dp"
            android:text="Total Distance"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/totalsteps"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginTop="390dp"
            android:layout_marginLeft="10dp"
            android:text="Steps Taken"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/totalcalories"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginTop="490dp"
            android:layout_marginLeft="10dp"
            android:text="Calories Burned"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Chad Yanagi"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="40sp" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ></ScrollView>

    </RelativeLayout>

</ScrollView>