<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="290dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_soleidarity_writing"/>

    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/imageView">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Account,"
            android:textColor="@color/colorAccent"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:fontFamily="@font/poppinsbold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign up to get started!"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="Full Name"
            android:drawableRight="@drawable/ic_baseline_perm_contact_calendar_24"
            android:id="@+id/nameEdit"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="Email"
            android:drawableRight="@drawable/ic_baseline_alternate_email_24"
            android:id="@+id/emailEdit"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="Password"
            android:drawableRight="@drawable/ic_baseline_lock_24"
            android:id="@+id/passwordEdit"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="8dp"
            android:gravity="center"
            android:weightSum="3">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Weight (lbs)"
                android:layout_weight="1"
                android:drawableRight="@drawable/ic_baseline_directions_run_24"
                android:id="@+id/weightEdit"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Height (in.)"
                android:layout_weight="1"
                android:id="@+id/heightEdit"
                android:drawableRight="@drawable/ic_baseline_height_24"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Age"
                android:layout_weight="1"
                android:id="@+id/ageEdit"
                android:drawableRight="@drawable/ic_baseline_calendar_today_24"/>

        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="Register"
        android:background="@drawable/button_signup"
        android:textColor="#FFFFFF"
        android:id="@+id/buttonReg"
        android:layout_below="@id/LinearLayout"/>



</RelativeLayout>